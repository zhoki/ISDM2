<h1>Listing tasks</h1>

<table class="table">
  <thead>
    <tr>
      <th>Assignedon</th>
      <th>Project</th>
      <th>Document</th>
      <th>Approver</th>
      <th>Assignee</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.assignedOn %></td>
        <td><%= task.project.name %></td>
        <td><%= task.document.document_template.name %></td>
        <td><%= task.approver_id %></td>
        <td><%= task.assignee_id %></td>
        <td><%= task.status %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Task', new_task_path :class => "btn btn-default" %>