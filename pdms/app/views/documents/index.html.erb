<h1>Listing documents</h1>

<table class="table">
  <thead>
    <tr>
      <th>Project</th>
      <th>Document template</th>
      <th>Author</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @documents.each do |document| %>
      <tr>
        <td><%= document.project.name %></td>
        <td><%= document.document_template.name %></td>
        <td><%= document.user.firstName%>
            <%= document.user.lastName%></td>
        <td><%= link_to 'Show', document %></td>
        <td><%= link_to 'Edit', edit_document_path(document) %></td>
        <td><%= link_to 'Destroy', document, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Document', new_document_path %>
