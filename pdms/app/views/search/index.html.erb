<script type="text/javascript">
    $(function() {
        $('#start_date').datepicker();
        $('#end_date').datepicker();
    });
</script>

<%= form_tag('/search/result', html: {class: "form-horizontal"}) do %>
    <div class="form-group">
      <%= label_tag(:name, 'Project name', :class => "col-lg-2 control-label") %>
      <div class="col-sm-4">
        <%= text_field_tag(:name, '', :class => "col-lg-4 form-control") %>
      </div>
    </div>
    <br>
    <br>
    <br>
    <div class="form-group">
      <%= label_tag(:startDate, 'Start date', :class => "col-lg-2 control-label") %>
      <div class="col-sm-2">
        <%= text_field_tag(:startDate, '', :class => "col-lg-4 form-control") %>
      </div>
    </div>
    <br>
    <br>
    <div class="form-group">
      <%= label_tag(:dueDate, 'End date', :class => "col-lg-2 control-label") %>
      <div class="col-sm-2">
        <%= text_field_tag(:dueDate, '', :class => "col-lg-4 form-control") %>
      </div>
    </div>
    <br>
    <br>
    <div class="form-group">
      <%= label_tag(:status, 'Status', :class => "col-lg-2 control-label") %>
      <div class="col-sm-2">
        <%= select_tag :status, options_for_select([["Open","Open"],["In progress","In progress"],["Suspended","Suspended"],["Completed","Completed"]]) %>
      </div>
    </div>
    <br>
    <br>
    <br>
    <div class="form-group">
      <div class="col-sm-2">
        <%= submit_tag("Search", :class => "btn btn-primary") %>
      </div>
    </div>
<% end %>